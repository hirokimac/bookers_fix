<div class="body">
    <div class="container">
        <div class="row">
            <div class="col-xs-3">
                <%= render "list", user:@user %>
            </div>

            <div class="col-xs-9">
                <h2>Books</h2>
                <table class="table table-hover table-inverse">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Opinion</th>
                            <th colspan="3"></th>
                        </tr>
                        <%= @books.each do |book| %>
                        <tr>
                            <td>
                                <%=link_to user_path(book.user_id) do %>
                                <%= attachment_image_tag book.user,:profile_image, :fill, 30, 30, class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
                                <% end %>
                            </td>
                            <td>
                                <%= link_to book.title, book_path(book.id) %>
                            </td>
                            <td>
                                <%= book.body %>
                            </td>
                        </tr>
                        <% end %>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>