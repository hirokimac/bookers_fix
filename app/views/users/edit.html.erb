<div class="body">
    <div class="container">
        <h2>User info</h2>
        <%= form_for(@user) do |f| %>
        <% if @user.errors.any? %>
        <div id="error_explanation">
            <h3>2 errors prohibited this book from being saved:</h3>
            <ul>
                <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
                <% end %>
            </ul>
        </div>
        <% end %>
        <div class="field">
            <label for="user_name">Name</label>
            <%= f.text_field :name , class:"form-control" %>
        </div>
        <div class="field">
            <label for="user_image">Image</label>
            <%= f.attachment_field :profile_image , class: "user-edit-form" %>
        </div>
        <div class="field">
            <label for="user_introduction">Introduction</label>
            <%= f.text_area :introduction , class:"form-control" %>
        </div>
        <%= f.submit "Update User", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
        <% end %>

    </div>

</div>