<div class="body">
    <div class="container">
        <div class="row">
            <div class="col-xs-3">
                <%= render "list", user:@user %>
            </div>

            <div class="col-xs-9">

                <h2>Users</h2>
                <table class="table table-hover table-inverse">
                    <thead>
                        <tr>
                            <th></th>
                            <th>image</th>
                            <th>name</th>
                            <th colspan="3"></th>
                        </tr>
                        <% @users.each do |user| %>
                        <tr>
                            <td>
                                <%= attachment_image_tag user,:profile_image, :fill, 30, 30, class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
                            </td>
                            <td>
                                <%= user.name %>
                            </td>
                            <td>
                                <%= link_to user_path(user.id) do %>
                                Show
                                <% end %>
                            </td>
                        </tr>
                        <% end %>
                    </thead>
                </table>

            </div>
        </div>
    </div>
</div>